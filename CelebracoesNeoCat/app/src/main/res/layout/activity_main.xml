<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="2"
    tools:context="almeida.joao.neocat.celebracoesneocat.MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titleMain"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Celebrações Comuns"
            android:textSize="20dp"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/celbPalavra"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Celebração da Palavra"
            android:onClick="celbPalavra"/>
        <Button
            android:id="@+id/eucaristia"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Eucaristia"
            android:onClick="eucaristia"/>
    </TableRow>
</TableLayout>
